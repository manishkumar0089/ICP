class Solution {
    public boolean isPerfectSquare(int num) {
        if(num<2) return true;
        int start = 1, end = num/2;
        while(start<=end){
            int mid = start + (end -start)/2;
            long squ = (long) mid*mid;
            if(squ == num) return true;
            else if(squ > num) end = mid-1;
            else start = mid+1;
        }
        return false;
    }
}
